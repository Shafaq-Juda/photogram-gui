<h1>List of users </h1>

<form action = "" method = "post"> 
     <label for = "">Username</label>
     <input id = "" name = "" placeholder = "Enter a username..."/>
     <button type="submit">Add user </button>
</form>

<hr>
<table border="1">
  <tr>
      <th>ID</th>
      <th>Username</th>
      <th></th>
  </tr>

  <% @list_of_users.each do |a_user|%>
    <tr>
        <td><%= a_user.id %></td>
        <td><%= a_user.username %></td>
        <td><a href = "/users/:path_username">Show details</a></td>
    </tr>
  <% end %>

</table>
